PORT=5000
# MongoDB Atlas connection string (reemplaza <username>, <password>, <cluster> y <dbname>)
# Ejemplo: mongodb+srv://myuser:mypass@cluster0.xxxxx.mongodb.net/mydb?retryWrites=true&w=majority&appName=MyApp
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority&appName=<appName>
JWT_SECRET=replace_with_a_strong_secret
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# AWS / S3 (si vas a usar S3 para almacenar imágenes)
USE_S3=true
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# Nombre del bucket S3. Se soportan tanto AWS_S3_BUCKET_NAME como S3_BUCKET
AWS_S3_BUCKET_NAME=your-bucket-name
S3_BUCKET=your-bucket-name

# Opcional: configurar límites u otras opciones
MAX_UPLOAD_SIZE=10485760 # 10MB

# Nota: nunca subir este archivo con credenciales reales al control de versiones.# ======================
# SERVER CONFIGURATION
# ======================
PORT=5000
NODE_ENV=development

# ======================
# DATABASE
# ======================
# Local MongoDB (desarrollo)
MONGODB_URI=mongodb://localhost:27017/instagur_dev

# MongoDB Atlas (producción) - Descomenta y usa tu URI de Atlas
# MONGODB_URI=mongodb+srv://<usuario>:<password>@cluster.mongodb.net/instagur?retryWrites=true&w=majority

# ======================
# AUTHENTICATION
# ======================
# IMPORTANTE: Cambia este secreto a algo único y seguro en producción
# Puedes generar uno con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=cambia_este_secreto_en_produccion_por_uno_seguro_de_al_menos_32_caracteres

# ======================
# FRONTEND
# ======================
# URL del frontend para CORS
FRONTEND_URL=http://localhost:3003

# ======================
# AWS S3 (OPCIONAL - Para producción)
# ======================
# Descomenta estas variables cuando despliegues en AWS
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=tu_access_key
# AWS_SECRET_ACCESS_KEY=tu_secret_key
# AWS_S3_BUCKET=instagur-images

# ======================
# NOTAS
# ======================
# 1. NO subas este archivo con valores reales a Git
# 2. Copia este archivo a .env y completa con tus valores
